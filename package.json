{
  "name": "cookstagram",
  "workspaces": [
    "frontend/*",
    "backend/*"
  ],
  "version": "1.0.0",
  "description": "Social platform to share recipes",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"cd backend && npm run start\" \"cd frontend && npm run dev\"",
    "post-install" : "concurrently \"cd backend && npm install\" \"cd frontend && npm install\""
